<div class="container pageContainer">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">

        <div class="panel-heading">Update User</div>
        <div class="panel-body">

        <form action="/api/updateUser" method="post">

          <input type="hidden" value="{{user.id}}" name="user_id"/>

          <div class="form-group">
            <label for="fnameInput">First Name</label>
            <input type="text" class="form-control" name="first_name" id="fnameInput" value="{{user.first_name}}">
          </div>

          <div class="form-group">
            <label for="lnameInput">Last Name</label>
            <input type="text" class="form-control" name="last_name" id="lnameInput" value="{{user.last_name}}">
          </div>

          <div class="form-group">
            <label for="emailInput">Email</label>
            <input type="email" class="form-control" name="email" id="emailInput" value="{{user.email}}">
          </div>

          <button id="updateUserBtn" type="submit" class="btn btn-primary btn-success">Update user</button>
          <button id="deleteUserBtn" type="button" class="btn btn-primary btn-danger pull-right">Delete user</button>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/updateUser.js"></script>
